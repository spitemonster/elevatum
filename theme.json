            "core/query": {
                "appearanceTools": true
            },
            "core/button": {
                "spacing": {
                    "margin": true
                },
                "border": {
                    "color": false,
                    "radius": true,
                    "style": true,
                    "width": true
                },
                "appearanceTools": true
            },
            "core/buttons": {
                "spacing": {
                    "margin": true
                }
            },
            "core/group": {
                "spacing": {
                    "margin": true,
                    "padding": true
                },
                "border": {
                    "color": true,
                    "radius": true,
                    "width": true
                },
                "background": {
                    "backgroundImage": true,
                    "backgroundSize": true
                },
                "color": {
                    "background": true
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": true,
                    "padding": true
                },
                "typography": {
                    "lineHeight": true
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": true,
                    "padding": true
                },
                "typography": {
                    "lineHeight": true
                }
            },
            "core/row": {
                "spacing": {
                    "blockGap": true
                }
            },
            "core/columns": {
                "spacing": {
                    "blockGap": true,
                    "margin": true,
                    "padding": true
                }
            },
            "core/image": {
                "border": {
                    "width": true,
                    "style": true,
                    "color": true,
                    "radius": true
                },
                "dimensions": {
                    "aspectRatio": true
                }
            },
            "core/gallery": {
                "color": {
                    "caption": true
                }
            },
            "core/list": {
                "appearanceTools": true
            },
            "core/media-text": {
                "spacing": {
                    "margin": true,
                    "padding": true,
                    "blockGap": true
                }
            },
            "core/cover": {
                "dimensions": {
                    "aspectRatio": true,
                    "minHeight": true
                },
                "appearanceTools": true,
                "background": {
                    "backgroundSize": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--dark-blue)"
        },
        "typography": {
            "fontFamily": "Poppins"
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "0"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "left": "var(--global-inline-padding)",
                        "right": "var(--global-inline-padding)",
                        "top": "0",
                        "bottom": "0"
                    },
                    "margin": {
                        "top": "0",
                        "bottom": "0"
                    }
                }
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "padding": {
                        "left": "0"
                    }
                }
            }
        }
    }
